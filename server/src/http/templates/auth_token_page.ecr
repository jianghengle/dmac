<!DOCTYPE html>
<html>
  <head>
    <title>Test</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script type="text/javascript">
      function saveToken() {
        var emailDiv = document.getElementById('emailDiv');
        var email = emailDiv.innerHTML;
        var tokenDiv = document.getElementById('tokenDiv');
        var token = tokenDiv.innerHTML;
        var usernameDiv = document.getElementById('usernameDiv');
        var username = usernameDiv.innerHTML;
        localStorage.setItem('email', email);
        localStorage.setItem('token', token);
        localStorage.setItem('username', username);
        window.location.href = '/';
      }
      window.onload = saveToken;
    </script>
  </head>
  <body>
    <div id="emailDiv" style="display: none;"><%= @email %></div>
    <div id="tokenDiv" style="display: none;"><%= @token %></div>
    <div id="usernameDiv" style="display: none;"><%= @username %></div>
  </body>
</html>

